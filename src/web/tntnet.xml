  <logging>
    <rootlogger>INFO</rootlogger>

    <loggers>
      <logger>
        <category>tntnet</category>
        <level>INFO</level>
      </logger>
      <logger>
        <category>component.libfty_rest-web</category>
        <level>INFO</level>
      </logger>
    </loggers>

